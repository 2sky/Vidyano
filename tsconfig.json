{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ],
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noEmitHelpers": true,
    "declaration": true
  },
  "include": [
    "src/Libs/Shims/*.ts",
    "src/Libs/Typings/**/*.d.ts",
    "src/Libs/Vidyano/vidyano.d.ts",
    "src/WebComponents/**/*.ts"
  ],
  "exclude": [
    "src/WebComponents/**/*.d.ts"
  ]
}