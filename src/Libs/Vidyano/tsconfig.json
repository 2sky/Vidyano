{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "dom",
      "es6"
    ],
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noEmitHelpers": true,
    "noUnusedLocals": true,
    "outFile": "vidyano.js",
    "declaration": true,
    "alwaysStrict": true
  },
  "include": [
    "_reference.ts",
    "**/*.ts"
  ],
  "exclude": [
    "vidyano.d.ts"
  ]
}